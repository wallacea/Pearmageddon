@model IEnumerable<CanningSession>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Canning Sessions";
}
<h1>Canning Sessions</h1>
@if(Model.Count() == 0)
{
    <div class="alert alert-warning">
      No Canning Sessions have been created.
    </div>
}
@foreach (var session in Model)
{
<div class="row">
        <div class="col-12 col-sm-2">Session Date: @session.DateCanned</div>
        <div class="col-12 col-sm-2">Pear Type: @session.PearTypeID</div>
    
</div>    
}
<a asp-action="New" asp-controller="CanningSession" class="btn btn-primary">Add New Canning Session</a>
