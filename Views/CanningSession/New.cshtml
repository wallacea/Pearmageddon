@{
}

<div>
    <h2>Canning Session</h2>
    <form asp-action="New" asp-controller="CanningSession">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="DateCanned" class="control-label"></label>
            <input asp-for="DateCanned" class="form-control" />
            <span asp-validation-for="DateCanned" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PearTypeID" class="control-label"></label>
            <select asp-for="PearTypeID" class="form-control" asp-items="ViewBag.PearTypes"></select>
            <span asp-validation-for="PearTypeID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Session</button>
    </form>
</div>
