@model IEnumerable<PearType>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a asp-action="New" asp-controller="PearType" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add New Pear Type</a>
<div>
    <h1>Pear Types</h1>
    <div class="pearTypes">
    @foreach(var pear in Model)
    {
        <div class="row">
            <h2>@pear.Name</h2>
            <div>Color: @pear.Color</div>
                <div><a asp-action="Edit" asp-controller="PearType" asp-route-id="@pear.ID" class="btn btn-secondary"><i class="fa-solid fa-pen-to-square"></i> Edit Pear Type</a></div>
        </div>
    }
    </div>
</div>